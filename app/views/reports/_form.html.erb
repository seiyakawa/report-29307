    <div class='form-text-wrap'>

    <%# インスタンスを渡して、エラー発生時にメッセージが表示されるようにしましょう。 %>
    <%= render 'shared/error_messages', model: f.object %>
    
      <label class="form-text">日付</label>
      <span class="indispensable">*</span>
    </div>
    <div class='input-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :date,
                    class:'select-date',
                    id:"date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2020,
                    end_year: (Time.now.year + 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <div class="img-upload">
      <div class="weight-bold-text">
        画像
        <span class="indispensable">*</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"report-image" %>
      </div>
      <div class="image-preview", id="image-list"></div>
    </div>
    <div class="new-reports">
      <div class="reports-name">
          顧客名
        <span class="indispensable">*</span>
      </div>
      <%= f.text_area :name, class:"reports-text", id:"report-name", placeholder:"顧客名" %>
      <div class="reports-purpose">
         目的
         <span class="indispensable">*</span>
      </div>
      <%= f.text_area :purpose, class:"reports-text", id:"report-purpose", placeholder:"目的" %>
      <div class="reports-text">
        学び
        <span class="indispensable">*</span>
      </div>
      <%= f.text_area :outcome, class:"reports-text", id:"report-outcome", placeholder:"学び" %>
      <div class="repots-text">
        アクションプラン
        <span class="indispensable">*</span>
      </div>
      <%= f.text_area :action_plan, class:"reports-text", id:"report-action", placeholder:"アクションプラン" %>
      <div class="reports-text">
         備考
      </div>
      <%= f.text_area :other, class:"reports-text", id:"report-other", placeholder:"備考" %>
    </div>

    <div class="sell-btn-contents">
      <%= f.submit "投稿する" ,class:"sell-btn" %>